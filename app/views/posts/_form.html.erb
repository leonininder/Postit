<%= render 'shared/errors', name: @post %>

<div class="row">
  <%= form_for @post do |f| %>
    <div class="row">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="row">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="row">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <br>
    <div class="row">
      <strong>Select Categories:</strong>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
    <br>
    <br>
    <div class="row">
      <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary ')%>
    </div>
  <% end %>
</div>
<%= render 'shared/return_nav' %>